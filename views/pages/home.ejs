        <div id="popupWindow" class="popup-window">
            <div class="popup-titlebar">
                <span id="popupTitle">System Dialog</span>
                <button class="popup-close" id="popupCloseBtn">√ó</button>
            </div>
            <div id="popupContent" class="popup-content">
                <!-- Content will be inserted here -->
            </div>
        </div>
    </div>

    <!-- Bootstrap JS removed due to CSP restrictions -->
    
    <!-- Matrix rain effect -->
    <script>
        const canvas = document.getElementById('matrix');
        const ctx = canvas.getContext('2d');

        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        const matrix = "ABCDEFGHIJKLMNOPQRSTUVWXYZ123456789@#$%^&*()*&^%+-/~{[|`]}";
        const matrixArray = matrix.split("");

        const font_size = 10;
        const columns = canvas.width / font_size;

        const drops = [];
        for(let x = 0; x < columns; x++) {
            drops[x] = 1;
        }

        function draw() {
            ctx.fillStyle = 'rgba(0, 0, 0, 0.04)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            ctx.fillStyle = '#00ff41';
            ctx.font = font_size + 'px arial';

            for(let i = 0; i < drops.length; i++) {
                const text = matrixArray[Math.floor(Math.random() * matrixArray.length)];
                ctx.fillText(text, i * font_size, drops[i] * font_size);

                if(drops[i] * font_size > canvas.height && Math.random() > 0.975) {
                    drops[i] = 0;
                }
                drops[i]++;
            }
        }

        setInterval(draw, 35);

        // Resize canvas on window resize
        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        });
        
        // Popup window functions
        function showPopup(title, content) {
            document.getElementById('popupTitle').textContent = title;
            document.getElementById('popupContent').innerHTML = content;
            document.getElementById('popupOverlay').style.display = 'flex';
        }
        
        function closePopup() {
            document.getElementById('popupOverlay').style.display = 'none';
        }
        
        function showLoginPopup(storyMode = null, storyTitle = null) {
            let message = 'Please enter your login credentials:';
            let redirectUrl = '/auth/login';
            
            if (storyMode && storyTitle) {
                message = `Login required to access ${storyTitle}!`;
                redirectUrl = `/auth/login?redirect=/${storyMode}`;
            }
            
            const content = `
                <div class="popup-message">${message}</div>
                <form action="${redirectUrl}" method="POST" class="popup-form">
                    <label class="popup-label">Username:</label>
                    <input type="text" name="username" class="popup-input" required autocomplete="username">
                    
                    <label class="popup-label">Password:</label>
                    <input type="password" name="password" class="popup-input" required autocomplete="current-password">
                    
                    <div class="popup-buttons">
                        <button type="submit" class="popup-button popup-button-primary">Login & Play</button>
                        <button type="button" class="popup-button popup-cancel">Cancel</button>
                    </div>
                </form>
                <div style="text-align: center; margin-top: 10px; font-size: 10px; color: #666;">
                    Don't have an account? <a href="#" id="switchToRegister" style="color: #000; text-decoration: underline;">Create one here</a>
                </div>
            `;
            showPopup('Login Required', content);
            
            // Add event listener for the register link
            setTimeout(() => {
                const switchLink = document.getElementById('switchToRegister');
                if (switchLink) {
                    switchLink.addEventListener('click', function(e) {
                        e.preventDefault();
                        showRegisterPopup(storyMode, storyTitle);
                    });
                }
            }, 100);
        }
        
        function showRegisterPopup(storyMode = null, storyTitle = null) {
            let message = 'Create a new account:';
            let redirectUrl = '/auth/register';
            
            if (storyMode && storyTitle) {
                message = `Create an account to access ${storyTitle}!`;
                redirectUrl = `/auth/register?redirect=/${storyMode}`;
            }
            
            const content = `
                <div class="popup-message">${message}</div>
                <form action="${redirectUrl}" method="POST" class="popup-form">
                    <label class="popup-label">Username:</label>
                    <input type="text" name="username" class="popup-input" required autocomplete="username">
                    
                    <label class="popup-label">Password:</label>
                    <input type="password" name="password" class="popup-input" required autocomplete="new-password">
                    
                    <label class="popup-label">Confirm Password:</label>
                    <input type="password" name="confirmPassword" class="popup-input" required autocomplete="new-password">
                    
                    <div class="popup-buttons">
                        <button type="submit" class="popup-button popup-button-primary">Register & Play</button>
                        <button type="button" class="popup-button popup-cancel">Cancel</button>
                    </div>
                </form>
                <div style="text-align: center; margin-top: 10px; font-size: 10px; color: #666;">
                    Already have an account? <a href="#" id="switchToLogin" style="color: #000; text-decoration: underline;">Login here</a>
                </div>
            `;
            showPopup('Create Account', content);
            
            // Add event listener for the login link
            setTimeout(() => {
                const switchLink = document.getElementById('switchToLogin');
                if (switchLink) {
                    switchLink.addEventListener('click', function(e) {
                        e.preventDefault();
                        showLoginPopup(storyMode, storyTitle);
                    });
                }
            }, 100);
        }
        
        // Close popup when clicking overlay
        document.addEventListener('click', function(e) {
            if (e.target.id === 'popupOverlay') {
                closePopup();
            }
        });
        
        // Close popup with Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closePopup();
            }
        });
        
        // Add event listeners when DOM is loaded
        document.addEventListener('DOMContentLoaded', function() {
            // Login button
            const loginBtn = document.getElementById('loginBtn');
            if (loginBtn) {
                loginBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    showLoginPopup();
                });
            }
            
            // Register button  
            const registerBtn = document.getElementById('registerBtn');
            if (registerBtn) {
                registerBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    showRegisterPopup();
                });
            }
            
            // Close button in popup (will be added dynamically)
            document.addEventListener('click', function(e) {
                if (e.target.id === 'popupCloseBtn' || e.target.classList.contains('popup-cancel')) {
                    closePopup();
                }
            });
            
            // Adventure card clicks for non-logged-in users
            const clickableCards = document.querySelectorAll('.clickable-card');
            clickableCards.forEach(card => {
                card.addEventListener('click', function() {
                    const storyMode = this.dataset.mode;
                    const storyTitle = this.dataset.title;
                    showLoginPopup(storyMode, storyTitle);
                });
            });
        });
    </script>
