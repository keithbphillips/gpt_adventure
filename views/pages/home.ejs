    <!-- Bootstrap CSS removed due to CSP restrictions - using inline styles instead -->
    <style>
        /* Orbitron font removed due to CSP - using system fonts with fallbacks */
        
        * {
            box-sizing: border-box;
        }
        
        body {
            background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #16213e 100%);
            color: #00ff41;
            font-family: 'Courier New', 'Lucida Console', monospace;
            min-height: 100vh;
            overflow-x: hidden;
            margin: 0;
            padding: 0;
        }
        
        /* Essential Bootstrap-like classes */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }
        
        .row {
            display: flex;
            flex-wrap: wrap;
            margin: 0 -15px;
        }
        
        .col-12 {
            width: 100%;
            padding: 0 15px;
        }
        
        .col-lg-6 {
            width: 50%;
            padding: 0 15px;
        }
        
        .col-lg-10 {
            width: 83.333333%;
            padding: 0 15px;
        }
        
        .col-md-6 {
            width: 50%;
            padding: 0 15px;
        }
        
        .text-center {
            text-align: center;
        }
        
        .mx-auto {
            margin-left: auto;
            margin-right: auto;
        }
        
        .mb-2 {
            margin-bottom: 0.5rem;
        }
        
        .mb-3 {
            margin-bottom: 1rem;
        }
        
        .mb-4 {
            margin-bottom: 1.5rem;
        }
        
        .mb-5 {
            margin-bottom: 3rem;
        }
        
        .mt-3 {
            margin-top: 1rem;
        }
        
        .mt-5 {
            margin-top: 3rem;
        }
        
        .me-3 {
            margin-right: 1rem;
        }
        
        .h-100 {
            height: 100%;
        }
        
        .d-flex {
            display: flex;
        }
        
        .align-items-center {
            align-items: center;
        }
        
        .justify-content-center {
            justify-content: center;
        }
        
        @media (max-width: 768px) {
            .col-lg-6, .col-lg-10, .col-md-6 {
                width: 100%;
            }
        }
        
        /* Matrix rain effect */
        .matrix-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            opacity: 0.1;
        }
        
        /* Glitch effect for title */
        .glitch {
            font-family: 'Arial Black', 'Helvetica Bold', sans-serif;
            font-weight: 900;
            text-transform: uppercase;
            position: relative;
            color: #00ff41;
            font-size: 3rem;
            letter-spacing: 0.1em;
            animation: glitch-skew 1s infinite linear alternate-reverse;
            margin-bottom: 0.5rem;
        }
        
        .glitch::before,
        .glitch::after {
            content: attr(data-text);
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
        
        .glitch::before {
            animation: glitch-anim 0.5s infinite linear alternate-reverse;
            color: #ff0041;
            z-index: -1;
        }
        
        .glitch::after {
            animation: glitch-anim2 1s infinite linear alternate-reverse;
            color: #00ffff;
            z-index: -2;
        }
        
        @keyframes glitch-anim {
            0% { clip: rect(64px, 9999px, 66px, 0); }
            5% { clip: rect(30px, 9999px, 36px, 0); }
            10% { clip: rect(80px, 9999px, 90px, 0); }
            15% { clip: rect(40px, 9999px, 50px, 0); }
            20% { clip: rect(10px, 9999px, 20px, 0); }
            25% { clip: rect(70px, 9999px, 80px, 0); }
            30% { clip: rect(20px, 9999px, 30px, 0); }
            35% { clip: rect(90px, 9999px, 100px, 0); }
            40% { clip: rect(50px, 9999px, 60px, 0); }
            45% { clip: rect(0px, 9999px, 10px, 0); }
            50% { clip: rect(60px, 9999px, 70px, 0); }
            100% { clip: rect(70px, 9999px, 80px, 0); }
        }
        
        @keyframes glitch-anim2 {
            0% { clip: rect(65px, 9999px, 100px, 0); }
            25% { clip: rect(85px, 9999px, 90px, 0); }
            50% { clip: rect(40px, 9999px, 60px, 0); }
            75% { clip: rect(30px, 9999px, 50px, 0); }
            100% { clip: rect(25px, 9999px, 40px, 0); }
        }
        
        @keyframes glitch-skew {
            0% { transform: skew(2deg); }
            10% { transform: skew(-1deg); }
            20% { transform: skew(1deg); }
            30% { transform: skew(0deg); }
            40% { transform: skew(1deg); }
            50% { transform: skew(-1deg); }
            60% { transform: skew(0deg); }
            70% { transform: skew(1deg); }
            80% { transform: skew(0deg); }
            90% { transform: skew(2deg); }
            100% { transform: skew(1deg); }
        }
        
        /* Navigation */
        .navbar {
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(10px);
            border-bottom: 2px solid #00ff41;
            padding: 1rem 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .navbar-brand {
            font-family: 'Arial Black', 'Helvetica Bold', sans-serif;
            font-weight: 700;
            color: #00ff41;
            font-size: 1.5rem;
            text-decoration: none;
        }
        
        .navbar-nav {
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
            align-items: center;
        }
        
        .nav-item {
            margin: 0 0.5rem;
        }
        
        .nav-link {
            color: #00ff41;
            font-family: 'Courier New', monospace;
            transition: all 0.3s ease;
            text-decoration: none;
            padding: 0.5rem 1rem;
        }
        
        .nav-link:hover {
            color: #00ffff;
            text-shadow: 0 0 10px #00ffff;
        }
        
        .navbar-toggler {
            display: none;
            background: transparent;
            border: 1px solid #00ff41;
            color: #00ff41;
            padding: 0.25rem 0.5rem;
        }
        
        .dropdown-menu {
            background: rgba(0,0,0,0.9);
            border: 1px solid #00ff41;
            margin-top: 0.5rem;
        }
        
        .dropdown-item {
            color: #00ff41;
            text-decoration: none;
            padding: 0.5rem 1rem;
            display: block;
        }
        
        .dropdown-item:hover {
            background: rgba(0, 255, 65, 0.1);
            color: #00ff41;
        }
        
        @media (max-width: 768px) {
            .navbar-toggler {
                display: block;
            }
            
            .navbar-nav {
                display: none;
                flex-direction: column;
                position: absolute;
                top: 100%;
                left: 0;
                right: 0;
                background: rgba(0, 0, 0, 0.95);
                border-top: 1px solid #00ff41;
            }
            
            .navbar-nav.show {
                display: flex;
            }
        }
        
        /* Hero section */
        .hero {
            min-height: 35vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 1.5rem 0 0.5rem 0;
        }
        
        .subtitle {
            font-size: 1.2rem;
            color: #00ffff;
            margin: 1rem 0;
            text-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
        }
        
        /* Terminal cards */
        .adventure-card {
            background: rgba(0, 0, 0, 0.8);
            border: 2px solid;
            border-radius: 10px;
            padding: 1.5rem;
            margin: 0.5rem 0;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .adventure-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transition: left 0.5s;
        }
        
        .adventure-card:hover::before {
            left: 100%;
        }
        
        .adventure-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 255, 65, 0.3);
        }
        
        .card-adventure { border-color: #00ff41; }
        .card-adventure:hover { border-color: #00ff41; box-shadow: 0 10px 30px rgba(0, 255, 65, 0.5); }
        
        .card-scifi { border-color: #00ffff; }
        .card-scifi:hover { border-color: #00ffff; box-shadow: 0 10px 30px rgba(0, 255, 255, 0.5); }
        
        .card-mystery { border-color: #ffaa00; }
        .card-mystery:hover { border-color: #ffaa00; box-shadow: 0 10px 30px rgba(255, 170, 0, 0.5); }
        
        .card-custom { border-color: #cc66ff; }
        .card-custom:hover { border-color: #cc66ff; box-shadow: 0 10px 30px rgba(204, 102, 255, 0.5); }
        
        .card-title {
            font-family: 'Arial Black', 'Helvetica Bold', sans-serif;
            font-weight: 700;
            font-size: 1.2rem;
            margin-bottom: 0.8rem;
        }
        
        .card-adventure .card-title { color: #00ff41; }
        .card-scifi .card-title { color: #00ffff; }
        .card-mystery .card-title { color: #ffaa00; }
        .card-custom .card-title { color: #cc66ff; }
        
        /* Buttons */
        .btn-terminal {
            background: transparent;
            color: inherit;
            border: 2px solid;
            padding: 0.8rem 2rem;
            font-family: 'Courier New', monospace;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .btn-terminal::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: currentColor;
            opacity: 0.1;
            transition: left 0.3s ease;
        }
        
        .btn-terminal:hover::before {
            left: 0;
        }
        
        .btn-terminal:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }
        
        .btn-adventure { border-color: #00ff41; color: #00ff41; }
        .btn-adventure:hover { color: #00ff41; text-shadow: 0 0 10px #00ff41; }
        
        .btn-scifi { border-color: #00ffff; color: #00ffff; }
        .btn-scifi:hover { color: #00ffff; text-shadow: 0 0 10px #00ffff; }
        
        .btn-mystery { border-color: #ffaa00; color: #ffaa00; }
        .btn-mystery:hover { color: #ffaa00; text-shadow: 0 0 10px #ffaa00; }
        
        .btn-custom { border-color: #cc66ff; color: #cc66ff; }
        .btn-custom:hover { color: #cc66ff; text-shadow: 0 0 10px #cc66ff; }
        
        .btn-primary-glow {
            background: linear-gradient(45deg, #00ff41, #00ffff);
            border: none;
            color: #000;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            padding: 1rem 2rem;
            font-size: 1.1rem;
            border-radius: 5px;
            transition: all 0.3s ease;
        }
        
        .btn-primary-glow:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0, 255, 65, 0.4);
            color: #000;
        }
        
        /* Responsive adjustments */
        @media (max-width: 768px) {
            .glitch {
                font-size: 2rem;
            }
            
            .subtitle {
                font-size: 1rem;
            }
            
            .adventure-card {
                padding: 1rem;
            }
            
            .hero {
                min-height: 35vh;
                padding: 1rem 0 0.5rem 0;
            }
        }
        
        /* Pulse animation for accent elements */
        .pulse {
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0% { opacity: 1; }
            50% { opacity: 0.5; }
            100% { opacity: 1; }
        }
        
        /* Typing animation */
        .typewriter {
            overflow: hidden;
            border-right: .15em solid #00ff41;
            white-space: nowrap;
            margin: 0 auto;
            letter-spacing: .15em;
            animation: typing 3.5s steps(27, end), blink-caret .75s step-end infinite;
            width: fit-content;
            max-width: 100%;
        }
        
        @keyframes typing {
            0% { width: 0; }
            100% { width: 100%; }
        }
        
        @keyframes blink-caret {
            from, to { border-color: transparent }
            50% { border-color: #00ff41; }
        }
        
        /* Popup Window Styles */
        .popup-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            z-index: 10000;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .popup-window {
            background: #c0c0c0;
            border: 2px outset #c0c0c0;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
            font-family: 'MS Sans Serif', sans-serif;
            font-size: 11px;
            min-width: 300px;
            max-width: 400px;
        }
        
        .popup-titlebar {
            background: linear-gradient(90deg, #0054e3, #0078d4);
            color: white;
            padding: 3px 6px;
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 11px;
        }
        
        .popup-close {
            background: #c0c0c0;
            border: 1px outset #c0c0c0;
            width: 16px;
            height: 14px;
            font-size: 12px;
            font-weight: bold;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0;
            line-height: 1;
        }
        
        .popup-close:hover {
            background: #e0e0e0;
        }
        
        .popup-close:active {
            border: 1px inset #c0c0c0;
        }
        
        .popup-content {
            padding: 15px;
            background: #c0c0c0;
        }
        
        .popup-message {
            color: #000;
            margin-bottom: 15px;
            font-size: 11px;
            font-family: 'MS Sans Serif', sans-serif;
        }
        
        .popup-form {
            margin: 10px 0;
        }
        
        .popup-label {
            display: block;
            color: #000;
            font-size: 11px;
            margin-bottom: 3px;
            font-family: 'MS Sans Serif', sans-serif;
        }
        
        .popup-input {
            width: 100%;
            padding: 2px 4px;
            border: 1px inset #c0c0c0;
            background: white;
            color: #000;
            font-size: 11px;
            font-family: 'MS Sans Serif', sans-serif;
            margin-bottom: 8px;
        }
        
        .popup-input:focus {
            outline: 1px dotted #000;
            outline-offset: -1px;
        }
        
        .popup-buttons {
            text-align: center;
            margin-top: 15px;
        }
        
        .popup-button {
            background: #c0c0c0;
            border: 1px outset #c0c0c0;
            padding: 2px 16px;
            margin: 0 5px;
            font-size: 11px;
            font-family: 'MS Sans Serif', sans-serif;
            cursor: pointer;
            min-width: 75px;
        }
        
        .popup-button:hover {
            background: #e0e0e0;
        }
        
        .popup-button:active {
            border: 1px inset #c0c0c0;
        }
        
        .popup-button-primary {
            font-weight: bold;
        }
        
        /* Clickable cards for non-logged-in users */
        .clickable-card {
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .clickable-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(0, 255, 65, 0.4);
        }
        
        .clickable-card:active {
            transform: translateY(-6px);
        }
        
        .card-prompt {
            margin-top: 1rem;
            text-align: center;
            opacity: 0.8;
        }
        
        .card-prompt:hover {
            opacity: 1;
        }
    </style>
</head>
