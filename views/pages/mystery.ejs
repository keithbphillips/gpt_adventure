    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        class GameClient {
            constructor() {
                this.username = '<%= user.username %>';
                this.apiEndpoint = '/api/mys-api';
                this.terminal = document.getElementById('gameTerminal');
                this.input = document.getElementById('gameInput');
                this.loadingIndicator = document.getElementById('loadingIndicator');
                this.progressBar = document.getElementById('progressBar');
                this.currentGenre = 'mystery'; // Default genre
                
                this.setupEventListeners();
                this.input.focus(); // Focus on input for immediate typing
                
                // Automatically send 'look around' command to start the game
                this.sendInitialCommand();
            }
            
            setupEventListeners() {
                // Remove existing event listeners to prevent duplicates
                this.clearEventListeners();
                
                // Store bound functions for removal later
                this.boundKeypress = (e) => {
                    if (e.key === 'Enter') {
                        this.sendMessage();
                    }
                };
                
                this.boundTerminalClick = () => {
                    this.input.focus();
                };
                
                this.boundRestartClick = () => {
                    this.restartGame();
                };
                
                this.boundRegenerateWorldClick = () => {
                    this.regenerateWorld();
                };
                
                // Add event listeners
                this.input.addEventListener('keypress', this.boundKeypress);
                this.terminal.addEventListener('click', this.boundTerminalClick);
                
                // Add exit click handlers (these are static and don't need to be removed)
                if (!this.exitListenersAdded) {
                    document.querySelectorAll('[class*="exit-"]').forEach(exit => {
                        exit.addEventListener('click', (e) => {
                            if (e.target.classList.contains('available')) {
                                const direction = e.target.dataset.direction;
                                this.input.value = `go ${direction}`;
                                this.sendMessage();
                            }
                        });
                    });
                    this.exitListenersAdded = true;
                }
                
                // Add restart game handler (static element, only add once)
                if (!this.restartListenerAdded) {
                    document.getElementById('restartGameBtn').addEventListener('click', this.boundRestartClick);
                    this.restartListenerAdded = true;
                }
                
                // Add regenerate world handler (static element, only add once)
                if (!this.regenerateWorldListenerAdded) {
                    document.getElementById('regenerateWorldBtn').addEventListener('click', this.boundRegenerateWorldClick);
                    this.regenerateWorldListenerAdded = true;
                }
            }
            
            clearEventListeners() {
                if (this.input && this.boundKeypress) {
                    this.input.removeEventListener('keypress', this.boundKeypress);
                }
                if (this.terminal && this.boundTerminalClick) {
                    this.terminal.removeEventListener('click', this.boundTerminalClick);
                }
            }
            
            async sendMessage() {
                const message = this.input.value.trim();
                if (!message) return;
                
                this.input.value = '';
                this.setLoading(true);
                
                // Add user message to terminal
                this.addToTerminal(`> ${message}`, 'user-message');
                
                try {
                    const response = await fetch(this.apiEndpoint, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Authorization': `Bearer ${localStorage.getItem('authToken') || ''}`
                        },
                        body: JSON.stringify({
                            input_text: message,
                            mylocation: this.currentLocation || 'start'
                        })
                    });
                    
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    
                    const data = await response.json();
                    
                    // Normal response handling
                    const cleanContent = this.sanitizeDisplayContent(data.content);
                    this.addToTerminal(cleanContent, 'ai-message');
                    
                    // Update game stats
                    if (data.data) {
                        this.updateGameStats(data.data);
                        // Update current genre for image generation
                        if (data.data.Genre) {
                            this.currentGenre = data.data.Genre.toLowerCase();
                        }
                    }
                    
                } catch (error) {
                    this.addToTerminal('Error: Could not connect to game server.', 'error-message');
                } finally {
                    this.setLoading(false);
                }
            }
            
            addToTerminal(message, className = '') {
                const messageDiv = document.createElement('div');
                messageDiv.classList.add('terminal-message');
                if (className) messageDiv.classList.add(className);
                messageDiv.innerHTML = message.replace(/\n/g, '<br>');
                
                // Insert before the terminal input
                const terminalInput = document.querySelector('.terminal-input');
                this.terminal.insertBefore(messageDiv, terminalInput);
                
                // Scroll to bottom
                this.terminal.scrollTop = this.terminal.scrollHeight;
                
                // Re-focus input
                this.input.focus();
            }
            
            updateGameStats(data) {
                console.log('🎮 updateGameStats called with data:', data);
                
                // Handle both old structure and new JSON game state structure
                const gameState = data;
                
                // Handle inventory array formatting
                let inventoryText = '-';
                if (gameState.Inventory && Array.isArray(gameState.Inventory) && gameState.Inventory.length > 0) {
                    inventoryText = gameState.Inventory.join(', ');
                } else if (gameState.inventory && Array.isArray(gameState.inventory) && gameState.inventory.length > 0) {
                    inventoryText = gameState.inventory.join(', ');
                }
                
                const updates = {
                    playerName: gameState.Name || gameState.name || '-',
                    playerClass: gameState.Class || gameState.playerClass || '-',
                    playerRace: gameState.Race || gameState.race || '-',
                    playerLevel: gameState.Level || gameState.level || '-',
                    playerHealth: gameState.Health || gameState.health || '-',
                    playerXP: gameState.XP || gameState.xp || '-',
                    playerAC: gameState.AC || gameState.ac || '-',
                    playerGold: gameState.Gold || gameState.gold || '-',
                    playerInventory: inventoryText,
                    currentLocation: gameState.Location || gameState.location || '-',
                    currentWeather: gameState.Weather || gameState.weather || '-',
                    currentTime: gameState.Time || gameState.timePeriod || '-',
                    currentDay: gameState.Day || gameState.dayNumber || '-',
                    currentQuest: gameState.Quest || gameState.quest || '-'
                };
                
                console.log('🎮 Updates to apply:', updates);
                
                Object.entries(updates).forEach(([id, value]) => {
                    const element = document.getElementById(id);
                    if (element) {
                        if (value && value !== '-') {
                            element.textContent = value;
                            console.log(`✅ Updated ${id} with: ${value}`);
                        } else {
                            console.log(`⚠️ No value for ${id}, keeping current: ${element.textContent}`);
                        }
                        if (id === 'currentLocation' && value && value !== '-') {
                            this.currentLocation = value;
                            this.loadLocationImage(value);
                        }
                    } else {
                        console.error(`❌ Element not found: ${id}`);
                    }
                });
                
                // Always update exits from database location lookup
                console.log('🎯 Loading exits from database location lookup');
                const location = gameState.Location || gameState.location;
                if (location) {
                    this.updateExitsFromLocation(location);
                } else {
                    console.log('🎯 No location data found, clearing exits');
                    this.updateExits('');
                }
            }
            
            async updateExitsFromLocation(locationName) {
                console.log('🗺️ ===== FETCHING EXITS FROM LOCATION DB =====');
                console.log('Looking up exits for location:', locationName);
                
                // Map frontend genre to database genre
                const genreMap = {
                    'adventure': 'fantasy D&D',
                    'scifi': 'Science Fiction',
                    'science fiction': 'Science Fiction',
                    'mystery': 'Mystery',
                    'custom': 'Custom'
                };
                
                const dbGenre = genreMap[this.currentGenre] || 'Mystery';
                console.log('🗺️ Current genre:', this.currentGenre, '-> DB genre:', dbGenre);
                
                try {
                    const response = await fetch(`/api/world-locations?genre=${encodeURIComponent(dbGenre)}`, {
                        method: 'GET',
                        headers: {
                            'Authorization': `Bearer ${localStorage.getItem('authToken') || ''}`,
                            'Content-Type': 'application/json'
                        }
                    });
                    
                    if (response.ok) {
                        const result = await response.json();
                        console.log('🗺️ Received locations:', result);
                        
                        // Find the current location with robust matching
                        const normalizeLocationName = (name) => {
                            return name.toLowerCase().trim().replace(/[^\w\s]/g, '').replace(/\s+/g, ' ');
                        };
                        
                        const normalizedSearchName = normalizeLocationName(locationName);
                        console.log('🗺️ Searching for normalized location:', normalizedSearchName);
                        
                        const currentLocation = result.locations.find(loc => {
                            const normalizedDbName = normalizeLocationName(loc.name);
                            console.log(`🗺️ Comparing "${normalizedSearchName}" with "${normalizedDbName}"`);
                            return normalizedDbName === normalizedSearchName;
                        });
                        
                        if (currentLocation) {
                            console.log('🗺️ Found current location:', currentLocation);
                            const exits = JSON.parse(currentLocation.exits || '{}');
                            console.log('🗺️ Exits for location:', exits);
                            this.updateExits(JSON.stringify(exits));
                        } else {
                            console.log('🗺️ Location not found in database, clearing exits');
                            this.updateExits('');
                        }
                    } else {
                        console.error('🗺️ Failed to fetch locations:', response.status);
                        this.updateExits('');
                    }
                } catch (error) {
                    console.error('🗺️ Error fetching location exits:', error);
                    this.updateExits('');
                }
            }
            
            updateExits(exitsData) {
                
                // Clear all exits first
                document.querySelectorAll('[class*="exit-"]').forEach(exit => {
                    exit.classList.remove('available');
                    exit.title = '';
                });
                
                // Parse exits data (could be JSON string or plain text)
                let exits = {};
                try {
                    if (typeof exitsData === 'string') {
                        // Try to parse as JSON first
                        if (exitsData.startsWith('{')) {
                            // Object format like {"north": "Forest Path", "south": "Village"}
                            exits = JSON.parse(exitsData);
                        } else if (exitsData.startsWith('[')) {
                            // Array format like ["north", "south", "east"]
                            const exitArray = JSON.parse(exitsData);
                            exitArray.forEach(direction => {
                                exits[direction.toLowerCase()] = direction;
                            });
                        } else {
                            // Parse as comma-separated list like "north, south, east"
                            const exitList = exitsData.split(',').map(e => e.trim().toLowerCase());
                            exitList.forEach(direction => {
                                if (direction) {
                                    // Map descriptive names to cardinal directions for legacy data
                                    const descriptiveToCardinal = {
                                        'narrow passage': 'west',
                                        'shallow pool': 'east', 
                                        'stone door': 'north',
                                        'passage': 'west',
                                        'pool': 'east',
                                        'door': 'north',
                                        'path': 'south'
                                    };
                                    
                                    const mappedDirection = descriptiveToCardinal[direction] || direction;
                                    exits[mappedDirection] = direction; // Keep original as title
                                }
                            });
                        }
                    } else if (Array.isArray(exitsData)) {
                        // Direct array
                        exitsData.forEach(direction => {
                            exits[direction.toLowerCase()] = direction;
                        });
                    } else if (typeof exitsData === 'object') {
                        exits = exitsData;
                    }
                } catch (error) {
                    console.log('🧭 Parse error:', error);
                    // Fallback: treat as comma-separated string
                    if (typeof exitsData === 'string') {
                        const exitList = exitsData.split(',').map(e => e.trim().toLowerCase());
                        exitList.forEach(direction => {
                            if (direction) {
                                exits[direction] = direction;
                            }
                        });
                    }
                }
                
                // Filter out empty or invalid exit values
                const filteredExits = {};
                Object.keys(exits).forEach(direction => {
                    const destination = exits[direction];
                    // Only include exits that have non-empty destination values
                    if (destination && destination.trim() !== '') {
                        filteredExits[direction] = destination;
                    }
                });
                exits = filteredExits;
                
                console.log('🧭 Parsed exits object (before filtering):', exits);
                console.log('🧭 Filtered exits object (after removing empty values):', exits);
                console.log('🧭 Available directions:', Object.keys(exits));
                console.log('🧭 ===== END UPDATING EXITS =====');
                
                // Update available exits
                Object.keys(exits).forEach(direction => {
                    // Map common direction names to compass directions
                    const directionMap = {
                        'north': 'north', 'n': 'north',
                        'south': 'south', 's': 'south', 
                        'east': 'east', 'e': 'east',
                        'west': 'west', 'w': 'west',
                        'northeast': 'northeast', 'ne': 'northeast',
                        'northwest': 'northwest', 'nw': 'northwest', 
                        'southeast': 'southeast', 'se': 'southeast',
                        'southwest': 'southwest', 'sw': 'southwest',
                        'up': 'up', 'u': 'up',
                        'down': 'down', 'd': 'down'
                    };
                    
                    const mappedDirection = directionMap[direction.toLowerCase()] || direction.toLowerCase();
                    const exitElement = document.getElementById(`exit-${mappedDirection}`);
                    
                    if (exitElement) {
                        exitElement.classList.add('available');
                        exitElement.title = `Go ${direction}${exits[direction] !== direction ? ` to ${exits[direction]}` : ''}`;
                    } else {
                        // For non-cardinal directions like "Back to the Path", try to infer the correct direction
                        // This is a temporary fix until AI provides proper cardinal directions
                        if (direction.toLowerCase().includes('back') || direction.toLowerCase().includes('return') || 
                            direction.toLowerCase().includes('path') || direction.toLowerCase().includes('way')) {
                            // Try to show this as an available exit on the compass
                            // We'll default to showing it as the opposite of the most recent movement
                            // For now, let's use east as the default return direction
                            const returnElement = document.getElementById('exit-east');
                            if (returnElement) {
                                returnElement.classList.add('available');
                                returnElement.title = `${direction}`;
                            }
                        }
                    }
                });
            }
            
            async loadLocationImage(locationName) {
                if (!locationName) return;
                
                try {
                    // Check if we have an image for this location
                    const response = await fetch('/api/location-image', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Authorization': `Bearer ${localStorage.getItem('authToken') || ''}`
                        },
                        body: JSON.stringify({
                            location: locationName,
                            description: this.getLocationDescription(),
                            genre: this.currentGenre
                        })
                    });
                    
                    if (response.ok) {
                        const data = await response.json();
                        if (data.imageUrl) {
                            this.displayLocationImage(data.imageUrl);
                        } else {
                            this.showImagePlaceholder();
                        }
                    } else {
                        this.showImagePlaceholder();
                    }
                } catch (error) {
                    this.showImagePlaceholder();
                }
            }
            
            displayLocationImage(imageUrl) {
                const imageContainer = document.getElementById('locationImage');
                imageContainer.innerHTML = `<img src="${imageUrl}" alt="Location image" />`;
            }
            
            showImagePlaceholder() {
                const imageContainer = document.getElementById('locationImage');
                imageContainer.innerHTML = '<div class="location-placeholder">No image available</div>';
            }
            
            getLocationDescription() {
                // Use the last stored game state description if available
                if (this.lastGameState && this.lastGameState.Description) {
                    return this.lastGameState.Description.substring(0, 500); // Use up to 500 chars for better image generation
                }
                // Fallback: Get the last AI response that might contain a description
                const messages = this.terminal.querySelectorAll('.terminal-message.ai-message');
                if (messages.length > 0) {
                    const lastMessage = messages[messages.length - 1];
                    return lastMessage.textContent.substring(0, 200); // First 200 chars for image generation
                }
                return '';
            }
            
            async regenerateWorld() {
                if (!confirm('Are you sure you want to regenerate the world? This will create a completely new world with new locations. This process may take up to 2 minutes. The current world will be permanently replaced.')) {
                    return;
                }
                
                this.setLoading(true);
                this.addToTerminal('[DETECTIVE SYSTEMS] Starting world regeneration... This may take up to 2 minutes. Please wait.', 'system-message');
                
                try {
                    const response = await fetch('/api/generate-world', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Authorization': `Bearer ${localStorage.getItem('authToken') || ''}`
                        },
                        body: JSON.stringify({
                            genre: 'Mystery',
                            force: true
                        })
                    });
                    
                    if (response.ok) {
                        const data = await response.json();
                        this.addToTerminal(`[DETECTIVE SYSTEMS] World regeneration complete! Generated ${data.message}`, 'system-message');
                        if (data.cleared) {
                            this.addToTerminal(`[DETECTIVE SYSTEMS] Cleared ${data.cleared.conversations} conversations, ${data.cleared.locations} locations, and ${data.cleared.images} images`, 'system-message');
                        }
                        this.addToTerminal('[DETECTIVE SYSTEMS] The new world is ready for investigation!', 'system-message');
                        
                        // Reset game stats before starting new world
                        this.resetGameStats();
                        this.updateExits('');
                        
                        // Automatically send "look around" command to start investigating the new world
                        setTimeout(() => {
                            this.addToTerminal('[DETECTIVE SYSTEMS] Starting investigation of new world...', 'system-message');
                            this.input.value = 'look around';
                            this.sendMessage();
                        }, 1500);
                    } else {
                        const errorData = await response.json().catch(() => null);
                        throw new Error(errorData?.details || `HTTP error! status: ${response.status}`);
                    }
                } catch (error) {
                    console.error('World regeneration error:', error);
                    this.addToTerminal('Error: Failed to regenerate world. Please try again.', 'error-message');
                } finally {
                    this.setLoading(false);
                }
            }
            
            async restartGame() {
                if (!confirm('Are you sure you want to restart the game? This will delete all your progress and cannot be undone.')) {
                    return;
                }
                
                this.setLoading(true);
                
                try {
                    const response = await fetch('/api/restart-game', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Authorization': `Bearer ${localStorage.getItem('authToken') || ''}`
                        },
                        body: JSON.stringify({
                            gameType: 'mystery' // Restart only mystery game
                        })
                    });
                    
                    if (response.ok) {
                        const data = await response.json();
                        
                        // Clear the terminal but keep header and input
                        this.terminal.innerHTML = `
