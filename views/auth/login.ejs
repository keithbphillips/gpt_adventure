<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - GPT Adventure</title>
    <style>
        * {
            box-sizing: border-box;
        }
        
        body {
            background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #16213e 100%);
            color: #00ff41;
            font-family: 'Courier New', 'Lucida Console', monospace;
            min-height: 100vh;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        /* Matrix rain effect */
        .matrix-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            opacity: 0.1;
        }
        
        /* Login container */
        .login-container {
            background: rgba(0, 0, 0, 0.8);
            border: 2px solid #00ff41;
            border-radius: 10px;
            padding: 2rem;
            width: 100%;
            max-width: 400px;
            margin: 1rem;
            position: relative;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 255, 65, 0.3);
        }
        
        .login-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(0, 255, 65, 0.1), transparent);
            transition: left 0.5s;
        }
        
        .login-container:hover::before {
            left: 100%;
        }
        
        /* Header */
        .login-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .login-title {
            font-family: 'Arial Black', 'Helvetica Bold', sans-serif;
            font-weight: 900;
            text-transform: uppercase;
            color: #00ff41;
            font-size: 1.5rem;
            letter-spacing: 0.1em;
            margin: 0;
            text-shadow: 0 0 10px rgba(0, 255, 65, 0.5);
        }
        
        .login-subtitle {
            color: #00ffff;
            font-size: 0.9rem;
            margin: 0.5rem 0 0 0;
            text-shadow: 0 0 5px rgba(0, 255, 255, 0.5);
        }
        
        /* Alerts */
        .alert {
            padding: 0.75rem 1rem;
            margin-bottom: 1rem;
            border-radius: 5px;
            font-size: 0.9rem;
        }
        
        .alert-danger {
            background: rgba(255, 0, 65, 0.1);
            border: 1px solid #ff0041;
            color: #ff4466;
        }
        
        .alert-info {
            background: rgba(0, 255, 255, 0.1);
            border: 1px solid #00ffff;
            color: #00ffff;
        }
        
        /* Form styling */
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .form-label {
            display: block;
            color: #00ff41;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }
        
        .form-control {
            width: 100%;
            padding: 0.75rem;
            background: rgba(0, 0, 0, 0.5);
            border: 1px solid #00ff41;
            border-radius: 5px;
            color: #00ff41;
            font-family: 'Courier New', monospace;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }
        
        .form-control::placeholder {
            color: rgba(0, 255, 65, 0.5);
        }
        
        .form-control:focus {
            outline: none;
            border-color: #00ffff;
            box-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
            background: rgba(0, 0, 0, 0.8);
        }
        
        /* Button styling */
        .btn-terminal {
            width: 100%;
            background: transparent;
            color: #00ff41;
            border: 2px solid #00ff41;
            padding: 0.8rem 2rem;
            font-family: 'Courier New', monospace;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            cursor: pointer;
            margin: 1rem 0;
        }
        
        .btn-terminal::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: rgba(0, 255, 65, 0.1);
            transition: left 0.3s ease;
        }
        
        .btn-terminal:hover::before {
            left: 0;
        }
        
        .btn-terminal:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 255, 65, 0.3);
            text-shadow: 0 0 10px #00ff41;
        }
        
        .btn-terminal:active {
            transform: translateY(0);
        }
        
        /* Links */
        .auth-links {
            text-align: center;
            margin-top: 1.5rem;
            padding-top: 1rem;
            border-top: 1px solid rgba(0, 255, 65, 0.2);
        }
        
        .auth-links p {
            color: #cccccc;
            font-size: 0.9rem;
            margin: 0;
        }
        
        .auth-links a {
            color: #00ffff;
            text-decoration: none;
            transition: all 0.3s ease;
        }
        
        .auth-links a:hover {
            color: #00ff41;
            text-shadow: 0 0 5px rgba(0, 255, 65, 0.5);
        }
        
        /* Back to home link */
        .back-home {
            position: absolute;
            top: 2rem;
            left: 2rem;
            color: #00ffff;
            text-decoration: none;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }
        
        .back-home:hover {
            color: #00ff41;
            text-shadow: 0 0 5px rgba(0, 255, 65, 0.5);
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            .login-container {
                margin: 1rem;
                padding: 1.5rem;
            }
            
            .login-title {
                font-size: 1.2rem;
            }
            
            .back-home {
                position: static;
                display: block;
                text-align: center;
                margin-bottom: 1rem;
            }
        }
    </style>
</head>
<body>
    <!-- Matrix background effect -->
    <canvas class="matrix-bg" id="matrix"></canvas>
    
    <!-- Back to home link -->
    <a href="/" class="back-home">&larr; Back to Adventure Selection</a>
    
    <div class="login-container">
        <div class="login-header">
            <h1 class="login-title">System Login</h1>
            <p class="login-subtitle">Access Required</p>
        </div>
        
        <% if (error) { %>
        <div class="alert alert-danger">
            ‚ö†Ô∏è <%= error %>
        </div>
        <% } %>
        
        <% if (redirectMessage) { %>
        <div class="alert alert-info">
            üéØ <%= redirectMessage %>
        </div>
        <% } %>
        
        <form action="/auth/login" method="POST">
            <div class="form-group">
                <label for="username" class="form-label">Username / Email</label>
                <input type="text" class="form-control" id="username" name="username" required placeholder="Enter your credentials">
            </div>
            
            <div class="form-group">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" required placeholder="Enter your password">
            </div>
            
            <button type="submit" class="btn-terminal">Initialize Session</button>
        </form>
        
        <div class="auth-links">
            <p>Need access credentials? <a href="/auth/register">Create Account</a></p>
        </div>
    </div>
    
    <!-- Matrix rain effect -->
    <script>
        const canvas = document.getElementById('matrix');
        const ctx = canvas.getContext('2d');

        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        const matrix = "ABCDEFGHIJKLMNOPQRSTUVWXYZ123456789@#$%^&*()*&^%+-/~{[|`]}";
        const matrixArray = matrix.split("");

        const font_size = 10;
        const columns = canvas.width / font_size;

        const drops = [];
        for(let x = 0; x < columns; x++) {
            drops[x] = 1;
        }

        function draw() {
            ctx.fillStyle = 'rgba(0, 0, 0, 0.04)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            ctx.fillStyle = '#00ff41';
            ctx.font = font_size + 'px arial';

            for(let i = 0; i < drops.length; i++) {
                const text = matrixArray[Math.floor(Math.random() * matrixArray.length)];
                ctx.fillText(text, i * font_size, drops[i] * font_size);

                if(drops[i] * font_size > canvas.height && Math.random() > 0.975) {
                    drops[i] = 0;
                }
                drops[i]++;
            }
        }

        setInterval(draw, 35);

        // Resize canvas on window resize
        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        });
        
        // Focus on username field when page loads
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('username').focus();
        });
    </script>
</body>
</html>